<%= form_for inquiry, html: { class: "edit_post", id: "edit_post_45" } do |f| %>
  
  <% if inquiry.errors.any? %>
    <ul>
      <% inquiry.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    
    </ul>
  <% end %>
  
  <div id:"label">
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </div>
  
  <div>
    <%= f.label :email %><br/>
    <%= f.text_field :email %>
  </div>
  
 
    <%= f.label :message %><br/>
    <%= f.text_area :message %>
  
  
  <div>
    <%= f.submit "Send" , class: "btn btn-large btn-primary btn_send" %>
  </div>
<% end %>
